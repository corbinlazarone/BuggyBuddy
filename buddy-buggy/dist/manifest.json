{
  "manifest_version": 3,
  "name": "Buggy Buddy",
  "description": "shopping extension",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Buggy Buddy"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "webRequest",
    "storage",
    "notifications",
    "favicon"
  ],
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "64": "./icons/buggyBuddy(64px).png",
    "128": "./icons/buggyBuddy(128px).png"
  }
}
