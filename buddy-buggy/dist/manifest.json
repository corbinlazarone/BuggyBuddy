{
  "manifest_version": 3,
  "name": "Buddy Buggy",
  "description": "shopping extension",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Buddy Buggy"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "webRequest",
    "storage",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "64": "buggyIcon.png"
  }
}
